<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Round"
            android:textSize="32sp"
            android:textColor="@color/roundColor"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tdv"
            android:layout_width="match_parent"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="21 September | 15:00 | SAC"
            android:textSize="16sp"
            android:textColor="@color/tdvColor"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/teamA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/teamColor"
                android:text="TEAM A"
                android:textSize="32sp"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/teamB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/teamColor"
                android:text="TEAM B"
                android:textSize="32sp"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/teamAScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/tdvColor"
                android:text="TeamA Score"
                android:textSize="16sp"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/teamBScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/tdvColor"
                android:text="TeamB Score"
                android:textSize="16sp"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="10dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/winner"
            android:layout_width="match_parent"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textColor="@color/vsColor"
            android:text="Winner Name"
            android:textSize="32sp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/winnerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tdvColor"
            android:text="Winner"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>



    </LinearLayout>
</android.support.v7.widget.CardView>